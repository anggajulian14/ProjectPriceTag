<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:backgroundTint="@null"
    android:background="@drawable/border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="1dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="1dp"
       >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QWERTYUIOPASDFGHJKLZXCVBNMQWERTYUIOPASDFGHJK"
            android:textColor="@color/black"
            android:textSize="1.95dp"
            android:id="@+id/NamaBarang" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SPAREPART MOTOR - HONDA MOTOR - AHASS"
            android:id="@+id/DetailBarang"
            android:textColor="@color/black"
            android:textSize="1.75dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 20.400"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="2.5dp"
                android:id="@+id/HargaNormal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05-12-24 sd 15-12-24"
                android:textColor="@color/black"
                android:id="@+id/PeriodePromo"
                android:textSize="1.75dp"/>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp."
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                android:textSize="3dp"
                android:gravity="top"
                android:id="@+id/RP"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19.000"
                android:textColor="@color/black"
                android:textSize="8.75dp"
                android:textStyle="bold"
                android:id="@+id/HargaBarang"
                android:layout_marginStart="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@id/RP"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="5dp"
                android:layout_marginEnd="1dp"
                android:id="@+id/logo"
                android:src="@drawable/swakop_logo"
                android:layout_marginTop="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TGC-22/02/24-15:35"
                        android:id="@+id/Returan"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="1.75dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TGC-22/02/24"
                        android:id="@+id/TGC"
                        android:textColor="@color/black"
                        android:textSize="1.75dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NRT-BEX-03/TTAOAPW-MA"
                    android:textColor="@color/black"
                    android:id="@+id/AlamatRak"
                    android:textSize="1.75dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTint="#FF0600">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="0dp"
            android:backgroundTint="#FF0600">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="4.75dp"
                        android:id="@+id/barcode"
                        android:layout_marginTop="0.75dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="390139103939"
                        android:textSize="2dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:id="@+id/barcodeNumber"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="5sp"
                    android:layout_marginBottom="1.5dp"
                    android:textStyle="bold"
                    android:text="PROMO"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>