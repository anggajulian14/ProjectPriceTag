<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:backgroundTint="@color/white"
    app:cardBackgroundColor="@color/white"
    android:layout_marginHorizontal="60dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OREO"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:id="@+id/NamaProduk"/>
        
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="10dp">

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@null"
               android:textSize="15sp"
               android:layout_margin="10dp"
               android:hint="Nama Produk"
               android:fontFamily="@font/poppinsmedium"
               android:textColor="@color/black"
               android:id="@+id/EDTNamaProduk"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="15sp"
                android:layout_margin="10dp"
                android:hint="Barcode Produk"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black"
                android:id="@+id/EDTBarcodeProduk"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="15sp"
                android:layout_margin="10dp"
                android:hint="Kategori Produk"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black"
                android:id="@+id/EDTKategoriProduk"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="15sp"
                android:layout_margin="10dp"
                android:hint="Supplier Produk"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black"
                android:id="@+id/EDTSupplierProduk"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="15sp"
                android:layout_margin="10dp"
                android:hint="Brand Produk"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black"
                android:id="@+id/EDTBrandProduk"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ButtonBatal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batal"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="14dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp"
                app:cornerRadius="20dp"
                android:layout_marginEnd="20dp"/>

            <Button
                android:id="@+id/ButtonKonfirmasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konfirmasi"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="14dp"
                android:backgroundTint="@color/black"
                android:layout_marginBottom="20dp"
                app:cornerRadius="20dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>